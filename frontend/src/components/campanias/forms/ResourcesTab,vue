<template>
  <div class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Recursos Humanos -->
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <h3 class="text-lg font-medium text-gray-900">Recursos Humanos</h3>
          <button
            type="button"
            @click="$emit('open-resource-modal', 'human')"
            class="px-3 py-1 text-sm font-medium text-white bg-purple-600 rounded hover:bg-purple-700"
          >
            + A√±adir
          </button>
        </div>

        <div v-if="recursosHumanos.length === 0" class="text-center py-8 border-2 border-dashed border-gray-300 rounded-lg">
          <p class="text-gray-500">No hay recursos humanos asignados</p>
        </div>

        <div v-else class="space-y-3">
          <div
            v-for="(recurso, index) in recursosHumanos"
            :key="recurso.id"
            class="p-3 border border-gray-200 rounded-lg hover:bg-gray-50"
          >
            <div class="flex justify-between items-center">
              <div>
                <h5 class="font-medium text-gray-900">{{ recurso.rol }}</h5>
                <p class="text-sm text-gray-600">{{ recurso.personas }} personas</p>
                <p class="text-xs text-gray-500 mt-1">{{ recurso.descripcion }}</p>
              </div>
              <button
                type="button"
                @click="deleteRecursoHumano(index)"
                class="p-1 text-gray-400 hover:text-red-600"
              >
                üóëÔ∏è
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Recursos Materiales -->
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <h3 class="text-lg font-medium text-gray-900">Recursos Materiales</h3>
          <button
            type="button"
            @click="$emit('open-resource-modal', 'material')"
            class="px-3 py-1 text-sm font-medium text-white bg-purple-600 rounded hover:bg-purple-700"
          >
            + A√±adir
          </button>
        </div>

        <div v-if="recursosMateriales.length === 0" class="text-center py-8 border-2 border-dashed border-gray-300 rounded-lg">
          <p class="text-gray-500">No hay recursos materiales requeridos</p>
        </div>

        <div v-else class="space-y-3">
          <div
            v-for="(recurso, index) in recursosMateriales"
            :key="recurso.id"
            class="p-3 border border-gray-200 rounded-lg hover:bg-gray-50"
          >
            <div class="flex justify-between items-center">
              <div class="flex-1">
                <h5 class="font-medium text-gray-900">{{ recurso.nombre }}</h5>
                <div class="flex items-center justify-between text-sm text-gray-600">
                  <span>Cantidad: {{ recurso.cantidad }} {{ recurso.unidad }}</span>
                  <span v-if="recurso.costo" class="text-green-600">
                    {{ formatCurrency(recurso.costo) }}
                  </span>
                </div>
                <p class="text-xs text-gray-500 mt-1">{{ recurso.descripcion }}</p>
              </div>
              <button
                type="button"
                @click="deleteRecursoMaterial(index)"
                class="p-1 text-gray-400 hover:text-red-600 ml-2"
              >
                üóëÔ∏è
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Presupuesto -->
    <div class="pt-6 border-t border-gray-200">
      <h4 class="text-lg font-medium text-gray-900 mb-4">Presupuesto</h4>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Presupuesto Total (‚Ç¨)
          </label>
          <input
            v-model="campania.presupuesto_total"
            type="number"
            step="0.01"
            min="0"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
            placeholder="0.00"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Presupuesto Ejecutado (‚Ç¨)
          </label>
          <input
            v-model="campania.presupuesto_ejecutado"
            type="number"
            step="0.01"
            min="0"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
            placeholder="0.00"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Meta de Recaudaci√≥n (‚Ç¨)
          </label>
          <input
            v-model="campania.meta_recaudacion"
            type="number"
            step="0.01"
            min="0"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
            placeholder="0.00"
          />
        </div>
      </div>
    </div>
  </div>
</template>

<script setup>
const props = defineProps({
  recursosHumanos: {
    type: Array,
    required: true
  },
  recursosMateriales: {
    type: Array,
    required: true
  },
  campania: {
    type: Object,
    required: true
  }
})

const emit = defineEmits([
  'update:recursosHumanos',
  'update:recursosMateriales',
  'update:campania',
  'open-resource-modal'
])

const formatCurrency = (amount) => {
  if (!amount) return '‚Ç¨0.00'
  return new Intl.NumberFormat('es-ES', { style: 'currency', currency: 'EUR' }).format(amount)
}

const deleteRecursoHumano = (index) => {
  if (confirm('¬øEliminar este recurso humano?')) {
    emit('update:recursosHumanos', props.recursosHumanos.filter((_, i) => i !== index))
  }
}

const deleteRecursoMaterial = (index) => {
  if (confirm('¬øEliminar este recurso material?')) {
    emit('update:recursosMateriales', props.recursosMateriales.filter((_, i) => i !== index))
  }
}
</script>