// Query para obtener miembros con filtros
export const GET_MIEMBROS = `
  query Miembros($filters: MiembroFilters) {
    miembros(filters: $filters) {
      id
      nombre
      apellido1
      apellido2
      email
      telefono
      tipo_miembro {
        id
        nombre
      }
      agrupacion {
        id
        nombre
      }
      fecha_alta
      activo
    }
  }
`

// Query para obtener un miembro por ID
export const GET_MIEMBRO_BY_ID = `
  query Miembro($id: Int!) {
    miembro(id: $id) {
      id
      nombre
      apellido1
      apellido2
      email
      telefono
      tipo_miembro {
        id
        nombre
      }
      agrupacion {
        id
        nombre
      }
      fecha_alta
      activo
      direccion
      codigo_postal
      localidad
      provincia {
        nombre
      }
      pais_domicilio {
        nombre
      }
    }
  }
`

// Query para estad√≠sticas de miembros
export const GET_ESTADISTICAS_MIEMBROS = `
  query EstadisticasMiembros {
    estadisticasMiembros {
      total
      activos
      inactivos
      porTipo {
        tipo
        cantidad
      }
      porAgrupacion {
        agrupacion
        cantidad
      }
    }
  }
`

// Query para obtener tipos de miembro
export const GET_TIPOS_MIEMBRO = `
  query TiposMiembro {
    tiposMiembro {
      id
      nombre
      codigo
      requiere_cuota
      activo
    }
  }
`

// Query para obtener agrupaciones
export const GET_AGRUPACIONES = `
  query Agrupaciones {
    agrupaciones {
      id
      nombre
      codigo
      activo
    }
  }
`